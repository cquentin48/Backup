    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch frontend (debug mode)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/frontend/node_modules/webpack/bin/webpack.js",
            "args": [
                "serve", "--config", "${workspaceFolder}/frontend/webpack.config.js"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}